	public static String setPlayerID() {
		 String playerId = "";
		while(choosePlayerId=="") {
			System.out.println("Choose Options For Player 1");
			System.out.println("5 – X\n6 - O");
			choosePlayerId=sc1.nextInt();
		    switch (choosePlayerId) {
			case 5:
				playerId= "X";
			case 6:
				playerId= "O";
			}
		}
		return playerId;
